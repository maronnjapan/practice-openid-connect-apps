generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

generator fabbrica {
  provider = "prisma-fabbrica"
  output   = "../src/generated/fabbrica"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  clientId     String        @id @default(cuid())
  clientSecret String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  RedirectUri  RedirectUri[]
  Scope        Scope[]
}

model RedirectUri {
  id        String   @id @default(cuid())
  uri       String
  clientId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  client Client @relation(fields: [clientId], references: [clientId], onDelete: Cascade)
}

model Scope {
  id        String   @id @default(cuid())
  name      String   @unique
  clientId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  client Client @relation(fields: [clientId], references: [clientId], onDelete: Cascade)
}
